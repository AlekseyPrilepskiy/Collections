internal class Program
{
    private static void Main(string[] args)
    {
        const string CommandSum = "sum";
        const string CommandExit = "exit";

        List<int> numbers = new List<int>();

        string input;

        bool isWork = true;

        Console.WriteLine("Вводите числа, чтобы их запомнить\nЧтобы посчитать сумму, введите 'sum'\nДля выхода введите 'exit'");

        while (isWork)
        {
            input = Console.ReadLine();

            switch (input)
            {
                case CommandSum:
                    ShowSum(numbers);
                    break;

                case CommandExit:
                    CloseProgramm(ref isWork);
                    break;

                default:
                    AddNumber(numbers, input);
                    break;
            }
        }
    }

    private static void ShowSum(List<int> numbers) 
    {
        Console.WriteLine($"Сумма: {numbers.Sum()}");
    }

    private static void CloseProgramm(ref bool isWork)
    {
        isWork = false;

        Console.WriteLine("Выход из программы...");
    }

    private static void AddNumber(List<int> numbers, string input)
    {
        if (int.TryParse(input, out int number) == true)
        {
            numbers.Add(number);
        }
        else
        {
            Console.WriteLine("Неккоректный ввод.");
        }
    }
}
